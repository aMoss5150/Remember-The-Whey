
append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/lists.css")
  //- add page specific js
  script(src="/javascripts/lists.js" type="module")

mixin lists()
    div(class="block_lists") My Lists:
        ul(id="lists")

    button(id="btn-create-list") Create New List
    div(id="myModal" class='modal')
        div(class="modal-content")
            form(class="list-form")
                input(id="csurf" type="hidden" name="_csrf" value=csrfToken)
                span(class="close") X
                p(class="add-list") Add a list
                label(class="list-label" for="list-name") Please enter a new list name:
                br
                input(type="text" name="name" class="list-name--input" required)
                br
                input(type="submit" value="Add" class="list-add")
                input(type="button" value="Cancel" class="list-cancel")

    br

    button(id="btn-rename-list") Rename a List
    div(id="myModal-rename" class='modal-rename')
        div(class="modal-content-rename")
            form(class="list-rename-form")
                input(id="csurf-rename" type="hidden" name="_csrf" value=csrfToken)
                span(class="close-rename") X
                p(class="add-list-rename") Rename list
                label(for="list-name-rename" class="list-label-rename") List name
                br
                input(type="text" name="name" class="list-name-rename--input" required)
                br
                input(type="submit" value="Save" class="list-rename")
                input(type="button" value="Cancel" class="list-cancel-rename")
