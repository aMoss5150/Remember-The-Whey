extends layout
include tasks.pug
include lists.pug
include summary.pug

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/reset.css")
  link(rel="stylesheet" href="/stylesheets/index.css")
  //- add page specific js
  script(src="/javascripts/index.js" type="module" defer)
  script(src="/javascripts/slideout.js" type="module" defer)

block content
  .navbar__row NAV
    .right__navbox
      button logout
    .search__navbox
      img(class="search-icon" src="data:image/svg+xml;utf8;base64,")
      input(class="searchinput__field" placeholder="Search" type="text")

  .column__container
    .list__column
      +lists
    .task__column  
      +tasks
    .summary__column
      +summary
      .title__container All Tasks
      .tasks__container 0
        .title__container-title Tasks
      .overdue__container 0
        .overdue__container-title Overdue
      .completed__container 0
        .completed__container-title Completed
      .summary__update

        input(class="update__task" placeholder="taskname" type="text")
        label list
        select(class="update__list" placeholder="currentlist" type="text")
          option today
          option tomorrow
        label reps
        input(class="update__reps" placeholder="currentreps" type="text")
        label sets
        input(class="update__sets" placeholder="currentsets" type="text")
        label duration
        input(class="update__duration" placeholder="currentduration" type="text")
        label notes
        textarea(class="update__notes")

    .summary__slideout
      a(href="#" id="closed" class="slideout__close" onclick="closeSlideout()") &times
      input(class="update__task" placeholder="taskname" type="text")
      label list
      select(class="update__list" placeholder="currentlist" type="text")
        option today
        option tomorrow
      label reps
      input(class="update__reps" placeholder="currentreps" type="text")
      label sets
      input(class="update__sets" placeholder="currentsets" type="text")
      label duration
      input(class="update__duration" placeholder="currentduration" type="text")
      label notes
      textarea(class="update__notes")
        
          
      .footer &copy footer

